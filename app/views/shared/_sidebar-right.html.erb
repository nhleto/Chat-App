<div class="sidebar2" id=mySidebar2>
  <a href="javascript:void(0)" class="closebtn2">&times;</a>
  <h3 class="title is-3 ml-5"><%= 'All' if @room.id == Room.first.id %> Users</h3>
  <% if @users %>
    <% if @room.id == Room.first.id %>
      <% @all_users.each do |user| %>
        <span class='center user-<%= user.id %>-status-mobile' style='display:flex' id='mobile-bar'>
          <i class="fa fa-circle user-<%= user.id %>-status mr-1 <%= "online" if user.online %>"></i>
          <p><%= user.username %></p>
        </span>
      <% end %>
    <% else %>
      <% @users.uniq.each do |user| %>
        <span class='center user-<%= user.id %>-status-mobile' id='mobile-bar'>
          <i class="fa fa-circle user-<%= user.id %>-status mr-1 <%= "online" if user.online %>"></i>
          <p><%= user.username %></p>
        </span>      
      <% end %>
    <% end %>
  <% end %>
</div>