<div class="display">
  <%= render 'shared/rooms-sidebar' %>

  <div class="room ml-3 mr-3">
    <div class='box mb-1' id="message-display">
      <% if @messages %>
        <% @messages.each do |message| %>
          <article class="message">
            <div class="message-header">
              <%= message.user.username %>
              <div class="time">
                <%= distance_of_time_in_words(message.created_at, Time.now) %> ago
              </div>
            </div>
            <div class="message-body">
              <%= message.body %>
            </div>
          </article>
        <% end %>
      <% end %>
    </div>

    <%= simple_form_for(@message) do |f| %>
      <div class="field has-addons" style='align-items:flex-end'>
        <div class="control mt-3">
          <%= f.input :body, 
              input_html: { id: 'message-input', class: 'input' },
              label: false,
              wrapper: false,
              placeholder: 'Say something!' %>
        </div>
        <div class="control">
          <%= f.button :button, 
              class: 'button is-primary submitter' %>
        </div>
      </div>
      <%= f.hidden_field :room_id, value: @room.id %>
    <% end %>
  </div>
  <%= render 'shared/users' %>
</div>