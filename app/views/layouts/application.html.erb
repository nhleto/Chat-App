<!DOCTYPE html>
<html>
  <head>
    <title>ChatApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "application", "https://fonts.googleapis.com/css2?family=Dosis&display=swap" %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css2?family=Dosis&family=Ubuntu&display=swap' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render 'shared/navbar' %>
    <% end %>

    <%= render 'shared/flash' %>
    <%= yield %>
  </body>
</html>
