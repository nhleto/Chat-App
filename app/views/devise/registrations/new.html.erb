<div class="section">
  <h2 class="title is-2 has-text-centered">Sign Up</h2>
  <div class="columns is-centered">
    <div class="box sign-up">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <div class="control">
          <%= f.input :username,
                    wrapper: false,
                    required: false,
                    label_html: { class: 'label' },
                    input_html: { class: 'input' } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :password,
                    wrapper: false,
                    label_html: { class: 'label' },
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: 'input' } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :password_confirmation,
                    wrapper: false,
                    label_html: { class: 'label' },
                    input_html: { class: 'input' } %>
        </div>
      </div>

      <%= render 'devise/shared/sign-in-links' %>

      <%= f.button :submit, "Sign in", class:'button mb-5 sign-in-button' %>

      <%
=begin%>
 <span class='center mb-5 text-divider' style='color:rgba(74,74,74,0.3);'>
        <small style='padding:0 20px 0 20px'>OR</small>
      </span> 
<%
=end%>

      <div class="field">
        <%= render "devise/shared/links" %>
      </div>

      <% end %>
    </div>
  </div>
</div>